<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="18sp"
        android:text="Instructions:\r\n1. Make sure your Bluetooth bridge device is paired.\r\n2. Connect bridge device, and turn on headset and bridge device.\r\n3. Choose Bluetooth bridge device from list.\r\n4. Tap Activate." />
    
    <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1" 
        >

        <TextView
            android:id="@+id/txtDebug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:scrollbars = "vertical"
            android:text="TextView" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="18sp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnActivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBtnActivate"
            android:text="Activate MWM"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBtnTest"
            android:text="Test MWM" />

    </LinearLayout>

</LinearLayout>